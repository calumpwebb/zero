{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Zero",
  "scopeName": "source.zero",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.number-sign.zero",
      "match": "#.*$"
    },
    "strings": {
      "name": "string.quoted.double.zero",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.zero",
          "match": "\\\\."
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.zero",
          "match": "\\b(fn|return|if|else|for|break|continue)\\b"
        }
      ]
    },
    "constants": {
      "name": "constant.language.zero",
      "match": "\\b(true|false)\\b"
    },
    "numbers": {
      "name": "constant.numeric.zero",
      "match": "\\b[0-9]+\\b"
    },
    "functions": {
      "name": "entity.name.function.zero",
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
    },
    "types": {
      "name": "entity.name.type.zero",
      "match": ":\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "entity.name.type.zero" }
      }
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.zero",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.zero",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.zero",
          "match": "[+\\-]"
        }
      ]
    }
  }
}
